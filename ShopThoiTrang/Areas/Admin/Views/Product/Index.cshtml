@model IEnumerable<ShopThoiTrang.Models.ProductCategory>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-md-6">
                <strong class="text-uppercase text-danger">Danh sách sản phẩm</strong>
            </div>
            <div class="col-md-6 text-right">
                <a href="@Url.Action("Create", "Product")" class="btn btn-sm btn-success">
                    <i class="far fa-plus"></i> Thêm sản phẩm
                </a>
                <a href="@Url.Action("Trash", "Product")" class="btn btn-sm btn-danger">
                    <i class="fal fa-trash"></i> Thùng rác
                </a>
            </div>
        </div>
    </div>
    <div class="card-body p-3">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th style="width: 5px" class="text-center">ID</th>
                    <th style="width: 100px" class="text-center">Hình ảnh</th>
                    <th style="width: 160px" class="text-center">Tên sản phẩm</th>
                    <th style="width: 100px" class="text-center">Loại sản phẩm</th>
                    <th style="width: 20px" class="text-center">Giá</th>
                    <th style="width: 20px" class="text-center">Giá sale</th>
                    <th style="width: 15px" class="text-center">Trạng thái</th>
                    <th style="width: 150px" class="text-center">Chức năng</th>
                </tr>
            </thead>
            <tbody>
               @foreach (var item in Model)
                {
                <tr>
                    <td class="text-center">@item.Id</td>
                    <td class="image-product-container text-center">
                        <img src="~/Public/images/product/@item.Img" />
                    </td>
                    <td>@item.Name</td>
                    <td>@item.CateName</td>
                    <td>@item.Price đ</td>
                    <td>@item.Pricesale đ</td>
                    <td class="text-center">
                        @if (item.Status == 1)
                        {
                            <a href="@Url.Action("Status", "Product", new { @id = item.Id })" class="switch">
                                <input type="checkbox" checked>
                                <span class="slider round"></span>
                            </a>
                        }
                        else
                        {
                            <a href="@Url.Action("Status", "Product", new { @id = item.Id })" class="switch">
                                <input type="checkbox">
                                <span class="slider round"></span>
                            </a>
                        }
                    </td>
                    <td class="text-center">

                        <a href="@Url.Action("Edit", "Product", new { @id = item.Id })" class="btn btn-sm btn-outline-info">
                            Sửa
                        </a>
                        <a href="@Url.Action("Details", "Product", new { @id = item.Id })" class="btn btn-sm btn-outline-warning">
                            Chi tiết
                        </a>
                        <a href="@Url.Action("DelTrash", "Product", new { @id = item.Id })" class="btn btn-sm btn-outline-danger">
                            Xóa
                        </a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>

