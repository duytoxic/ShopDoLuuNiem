<!DOCTYPE html>
<html>
<head>
    <title>@Page.Title</title>
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no' name='viewport' />

    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700,200" rel="stylesheet" />

    <link href="~/Areas/Admin/Public/css/paper-dashboard.css" rel="stylesheet" />
    <link href="~/Areas/Admin/Public/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Areas/Admin/Public/demo/demo.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Public/css/LayoutAdmin.css" rel="stylesheet" />
    <link href="~/Public/assets/css/all.min.css" rel="stylesheet" />

    <script src="~/Areas/Admin/Public/js/jquery.min.js"></script>
    <script src="~/Areas/Admin/Public/js/popper.min.js"></script>
    <script src="~/Areas/Admin/Public/js/bootstrap.min.js"></script>
    <script src="~/Areas/Admin/Public/js/perfect-scrollbar.jquery.min.js"></script>
    <script src="~/Areas/Admin/Public/demo/demo.js"></script>
    <script src="~/Areas/Admin/Public/js/paper-dashboard.min.js"></script>
    @RenderSection("head", required: false)
</head>
<body>

    <div class="sidebar" data-color="white" data-active-color="danger">
        <div class="logo">
            <a class="simple-text logo-normal text-center">
                Xin chào @Session["FullName"].ToString()
            </a>
        </div>
        <div class="sidebar-wrapper">
            <ul class="nav">
                <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")">
                    <a href="@Url.Action("Index", "Dashboard")">
                        <i class="nc-icon nc-bank"></i>
                        <p>Dashboard</p>
                    </a>
                </li>
                <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Product" ? "active" : "")">
                    <a href="@Url.Action("Index", "Product")">
                        <i class="fab fa-product-hunt"></i>
                        <p>Sản phẩm</p>
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "Category")">
                        <i class="nc-icon nc-pin-3"></i>
                        <p>Danh mục sản phẩm</p>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseTwo"
                       aria-expanded="true" aria-controls="collapseTwo">
                        <i class="fas fa-fw fa-cog"></i>
                        <span>Cài đặt</span>
                    </a>
                    <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionSidebar">
                        <div class="bg-white py-2 collapse-inner rounded">
                            <h6 class="collapse-header">Custom Components:</h6>
                            <a class="collapse-item" href="buttons.html">Buttons</a>
                            <a class="collapse-item" href="cards.html">Cards</a>
                        </div>
                    </div>
                </li>
            </ul>
        </div>
    </div>
    <div class="main-panel">
        <nav class="navbar navbar-expand-lg navbar-absolute fixed-top navbar-transparent">
            <div class="container-fluid">
                <div class="navbar-wrapper">
                    <div class="navbar-toggle">
                        <button type="button" class="navbar-toggler">
                            <span class="navbar-toggler-bar bar1"></span>
                            <span class="navbar-toggler-bar bar2"></span>
                            <span class="navbar-toggler-bar bar3"></span>
                        </button>
                    </div>
                </div>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navigation" aria-controls="navigation-index" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-bar navbar-kebab"></span>
                    <span class="navbar-toggler-bar navbar-kebab"></span>
                    <span class="navbar-toggler-bar navbar-kebab"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-end" id="navigation">
                    <form>
                        <div class="input-group no-border">
                            <input type="text" value="" class="form-control" placeholder="Tìm kiếm...">
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <i class="nc-icon nc-zoom-split"></i>
                                </div>
                            </div>
                        </div>
                    </form>
                    <ul class="navbar-nav">
                        <li class="nav-item btn-rotate dropdown">
                            <a class="nav-link dropdown-toggle account-link" href="http://example.com" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fal fa-user-circle"></i>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownMenuLink">
                                <a class="dropdown-item" href="#">Thông tin tài khoản</a>
                                <a class="dropdown-item" href="@Url.Action("Logout", "Auth")">Đăng xuất</a>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <div class="content">
            @RenderBody()
        </div>
    </div>

    <script src="~/Areas/Admin/Public/js/custom.js"></script>
    @RenderSection("footer", required: false)
</body>
</html>
