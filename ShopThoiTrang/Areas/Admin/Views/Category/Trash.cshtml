@model IEnumerable<ShopThoiTrang.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-md-6">
                <strong class="text-uppercase text-danger">Thùng rác loại sản phẩm</strong>
            </div>
            <div class="col-md-6 text-right">
                <a href="@Url.Action("Index", "Category")" class="btn btn-sm btn-success">
                    <i class="far fa-chevron-left mr-1"></i> Quay lại danh sách
                </a>
            </div>
        </div>
    </div>
    <div class="card-body p-3">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th style="width: 20px" class="text-center">ID</th>
                    <th style="width: 130px">Tên loại sản phẩm</th>
                    <th style="width: 60px" class="text-center">Liên kết</th>
                    <th style="width: 100px" class="text-center">Chức năng</th>
                </tr>
            </thead>
            <tbody>
               @foreach (var item in Model)
                {
                <tr>
                    <td class="text-center">@item.Id</td>
                    <td>@item.Name</td>
                    <td>
                        <a href="~/san-pham/@item.Slug">@item.Slug</a>
                    </td>
                    <td class="text-center">
                        <a href="@Url.Action("ReTrash", "Category", new { @id = item.Id })" class="btn btn-sm btn-info">
                            <i class="fal fa-edit"></i>
                        </a>
                        <a href="@Url.Action("Delete", "Category", new { @id = item.Id })" class="btn btn-sm btn-danger">
                            <i class="fal fa-trash-alt"></i>
                        </a>
                    </td>

                </tr>
                }
            </tbody>
        </table>
    </div>
</div>

