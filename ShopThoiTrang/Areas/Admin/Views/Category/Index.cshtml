@model IEnumerable<ShopThoiTrang.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-md-6">
                <strong class="text-uppercase text-danger">Danh sách các loại sản phẩm</strong>
            </div>
            <div class="col-md-6 text-right">
                <a href="@Url.Action("Create", "Category")" class="btn btn-sm btn-success">
                    <i class="far fa-plus"></i> Thêm
                </a>
                <a href="@Url.Action("Trash", "Category")" class="btn btn-sm btn-danger">
                    <i class="fal fa-trash-alt"></i> Thùng rác
                </a>
            </div>
        </div>
    </div>
    <div class="card-body p-3">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th style="width: 20px" class="text-center">ID</th>
                    <th style="width: 130px" class="text-center">Tên loại sản phẩm</th>
                    <th style="width: 60px" class="text-center">Liên kết</th>
                    <th style="width: 60px" class="text-center">Trạng thái</th>
                    <th style="width: 100px" class="text-center">Chức năng</th>
                </tr>
            </thead>
            <tbody>
               @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center">@item.Id</td>
                        <td>@item.Name</td>
                        <td>
                            <a href="~/san-pham/@item.Name.ToLower()">@item.Name.ToLower()</a>
                        </td>
                        <td class="text-center">
                            @if (item.Status == 1)
                            {
                                <a href="@Url.Action("Status", "Category", new { @id = item.Id })" class="switch">
                                    <input type="checkbox" checked>
                                    <span class="slider round"></span>
                                </a>
                            }
                            else
                            {
                                <a href="@Url.Action("Status", "Category", new { @id = item.Id })" class="switch">
                                    <input type="checkbox">
                                    <span class="slider round"></span>
                                </a>
                            }
                        </td>
                        <td class="text-center">
                            
                            <a href="@Url.Action("Edit", "Category", new { @id = item.Id })" class="btn btn-sm btn-outline-info">
                                Sửa
                            </a>
                            <a href="@Url.Action("Details", "Category", new { @id = item.Id })" class="btn btn-sm btn-outline-warning">
                                Chi tiết
                            </a>
                            <a href="@Url.Action("DelTrash", "Category", new { @id = item.Id })" class="btn btn-sm btn-outline-danger">
                                Xóa
                            </a>
                        </td>
                        
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

